@page "/RentalsList"
@layout MainLayout

@using Microsoft.EntityFrameworkCore
@using PayNowBlazor.Components.Layout
@using PayNowBlazor.Infrastructure
@using PayNowBlazor.Infrastructure.Entities

<RadzenDataGrid TItem="Rental" @ref="RentalsGrid" AllowFiltering="true" AllowColumnResize="true" AllowAlternatingRows="false" 
		FilterMode="FilterMode.Advanced" AllowSorting="true" PageSize="10" AllowPaging="true" ShowPagingSummary="true"
		Data="@Rentals" ColumnWidth="100px" LogicalFilterOperator="LogicalFilterOperator.Or" AllowColumnReorder="true">
	<Columns>
		<RadzenDataGridColumn Property="@nameof(Rental.Id)" Title="ID" Frozen="true" TextAlign="TextAlign.Center"/>
		<RadzenDataGridColumn Property="@nameof(Rental.CustomerId)" Title="Customer ID" TextAlign="TextAlign.Center"/>
		<RadzenDataGridColumn Property="@nameof(Rental.ScooterId)" Title="Scooter ID" TextAlign="TextAlign.Center"/>
		<RadzenDataGridColumn Property="@nameof(Rental.StartDate)" Title="Start date" TextAlign="TextAlign.Center"/>
		<RadzenDataGridColumn Property="@nameof(Rental.EndDate)" Title="End date" TextAlign="TextAlign.Center"/>
	</Columns>
</RadzenDataGrid>

@code {

	[Inject]
	public DatabaseContext DbContext { get; set; } = null!;

	public RadzenDataGrid<Rental> RentalsGrid { get; set; }

	public DbSet<Rental> Rentals => DbContext.Rentals;

}